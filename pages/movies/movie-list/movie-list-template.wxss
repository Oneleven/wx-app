@import '../poster/poster-template.wxss';

.movie-list-container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.movie-head {
  padding: 30rpx 20rpx 22rpx;
  display: flex;
  justify-content: space-between
}

.movie-slogan {
  font-size: 24rpx;
}

.movie-more-text {
  vertical-align: center;
  margin-right: 10rpx;
  color: #1f4ba5;
  font-size: 24rpx;
}

.more-arrow {
  width: 9rpx;
  height: 16rpx;
  vertical-align: center;
}